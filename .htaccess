RewriteEngine On

# Handle requests ending in .html by rewriting to .php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)\.html$ $1.php [L]

# Handle clean URLs by rewriting to .php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Optional: Redirect .html URLs to clean URLs for SEO (301 redirect)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)\.html$ /$1 [R=301,L]
